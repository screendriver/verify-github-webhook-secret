{
  "name": "verify-github-webhook-secret",
  "version": "1.1.0",
  "description": "Verifies the secret that is sent in GitHub Webhooks",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "author": "Christian Rackerseder <git@echooff.de>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/screendriver/verify-github-webhook-secret.git"
  },
  "bugs": {
    "url": "https://github.com/screendriver/verify-github-webhook-secret/issues"
  },
  "homepage": "https://github.com/screendriver/verify-github-webhook-secret#readme",
  "keywords": [
    "secret",
    "github",
    "webhook"
  ],
  "files": [
    "dist/src/index.js",
    "dist/src/verify.js",
    "dist/src/index.d.ts",
    "dist/src/verify.d.ts"
  ],
  "scripts": {
    "precommit": "pretty-quick --staged",
    "prepublishOnly": "yarn clean && yarn build && yarn test",
    "clean": "rm -rf dist",
    "lint": "tslint -c tslint.json 'src/**/*.ts' 'test/**/*.ts'",
    "test:unit:tap": "nyc tape -r source-map-support/register 'dist/test/unit/**/*.js'",
    "test:unit": "yarn test:unit:tap | tap-dot",
    "test:integration:tap": "tape -r source-map-support/register 'dist/test/integration/**/*.js'",
    "test:integration": "yarn test:integration:tap | tap-dot",
    "test": "yarn lint && yarn test:unit && yarn test:integration && yarn coverage",
    "test:ci": "yarn lint && yarn test:unit:tap | tap-xunit > test-results.xml && yarn test:integration:tap | tap-xunit",
    "coverage": "nyc report --reporter=text-summary",
    "build": "tsc --build"
  },
  "dependencies": {
    "micro": "9.3.3",
    "tslib": "1.9.3"
  },
  "devDependencies": {
    "@types/got": "9.2.0",
    "@types/micro": "7.3.3",
    "@types/tape": "4.2.32",
    "@types/test-listen": "1.1.0",
    "got": "9.3.2",
    "husky": "1.1.3",
    "nyc": "13.3.0",
    "prettier": "1.15.1",
    "pretty-quick": "1.10.0",
    "source-map-support": "0.5.9",
    "tap-dot": "2.0.0",
    "tap-xunit": "2.3.0",
    "tape": "4.9.1",
    "test-listen": "1.1.0",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.15.0",
    "typescript": "3.1.6",
    "typescript-tslint-plugin": "0.0.5"
  }
}
