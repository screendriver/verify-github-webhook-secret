{
  "extends": ["config:base"],
  "labels": ["renovate"],
  "rebaseStalePrs": false,
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "nvm": {
    "enabled": false
  },
  "packageRules": [
    {
      "depTypeList": ["dependencies", "devDependencies"],
      "updateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
